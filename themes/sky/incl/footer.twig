<div class="footer">
    <div>
        <p>
            A website made with Pico, a simple Flat File Content Management System in PHP.
        </p>
    </div>
    <div class="social">
        {% for social in pages["_meta"].meta.social %}
            <a href="{{ social.url }}" title="{{ social.title }}" role="button">
                <i class="{{ social.icon }}" aria-hidden="true"></i>
                <span class="sr-only">{{ social.title }}</span>
            </a>
        {% endfor %}
    </div>
</div>

{% set scripts = ['modernizr-3.3.1-custom.min', 'utils', 'responsive-navbar', 'code'] %}
{% for script in scripts %}
<script src="{{ theme_url }}/../shared//js/{{ script }}.js" type="text/javascript"></script>
{% endfor %}
